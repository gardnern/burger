<h1>EAT-DA-BURGER!</h1>
<main>
<h2>Create a Burger!</h2>
<form>
    <div class="form-group">
        <input type="text" required placeholder="New burger " class="form-control" name="burger_name">
    </div>

    <button type="submit" class="btn">Add burger</button>
</form>

    <div class="row">
      <div class="col-text-center">
       
            <p>{{this.burger_name}}</p>
            <ul>
                {{#each burger}}
                   {{#unless devoured}}
                    <h4>Burger Name: {{burger_name}}</h4>
                      {{> burgers/delete-burger devoured=1}}                 
                   {{/unless}}
                {{/each}}
            </ul>
      </div>
         
      <div class="col s12 text-center">
          <h2>Devoured Burgers:</h2>
        <ul>
            {{#each burger}}
              {{#if this.devoured}}
                <div class="burgerEaten">
                <h4>{{burger_name}}</h4>
                </div>
              {{/if}}
            {{/each}}
      </div>
    </div>
  
</main>

