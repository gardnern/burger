<h1>EAT-DA-BURGER!</h1>
<img src="/public/images/burger1.jpg" align= "center"  width="200px" height="200px" id="burger1">

<div class ="col-md-8"><h2>Burgers Menu</h2></div>
<ul>
  {{#each burger}}
    {{#if devoured}}
      {{> burger/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<br>

      <div class="col-md-6">
        {{#each burger}}
          {{#if this.devoured}}
            <div class='burgerEaten'>
              <div>
                {{this.burger_name}}
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</main>

<main>
  <div class="container">
    <div class="row">
      <div class="col s6">
        {{#each burger}}
          {{#unless this.devoured}}
            <div>
              <form action="/burger/{{this.id}}?_method=PUT" method="POST">
                <button type="submit" class='burgerAvailable'> {{this.burger_name}}</button>
              </form>
            </div>
          {{/unless}}
        {{/each}}
      </div>

<ul>
  {{#each burger}}
    {{#unless devoured}}
      {{> burger/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>
<hr>




<hr>
<div class="row">
  <div class="col s12">
    <form action="/burger" method="POST">
      <input type="text" id="name" name="burger_name" placeholder="What do you call this burger?">
      <button type="submit" class="addBurgerButton">Let's make this Burger!</button>
    </form>
  </div>
</div>

