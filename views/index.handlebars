<h1>EAT-DA-BURGER!</h1>
<main>
  <div class="container">
    <div class="row">
      <div class="col s6">
        <h2>Burger Menu</h2>
        <p>{{#each burger}}</p>
        <p>{{#unless devoured}}</p>
            <div>
              
                    {{!-- {{!-- {{this.burger_name}} --}}
                              {{!-- {{!-- <button type="submit" class='burgerAvailable'> {{this.burger_name}}</button>  --}}
              
            </div>
          {{/unless}}
        {{/each}}
      </div>

      <div class="col s6">
        {{#each burger}}
          {{#if this.devoured}}
            <div class='burgerEaten'>
              <div>
               <p>{{this.burger_name}}</p>
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</main>

<h2>Create a New Burger!</h2>

<div class="row">
  <div class="col s12">
    <form action="/api/burger" method="POST">
      <input type="text" id="name" name="burger_name" placeholder="Burger Name">
      <button type="submit" class="addBurgerButton">Add the burger</button>
      <h2>Can you name some more?</h2>
    </form>
  </div>
</div>